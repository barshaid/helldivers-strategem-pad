<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state: slightly darker yellow ring -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="@color/pad_ctrl_pressed" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Default state: yellow ring around transparent center -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="@color/pad_ctrl" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>

